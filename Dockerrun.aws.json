{
    "AWSEBDockerrunVersion" : "2",
    "containerDefinitions": [
        {
            "name" : "client",
            "image" : "ganeshprabh07/multi-client",
            "hostname" : "client",
            "essential": false
        },
        {
            "name" : "server",
            "image" : "ganeshprabh07/multi-server",
            "hostname" : "api",
            "essential": false
        },
        {
            "name" : "worker",
            "image" : "ganeshprabh07/multi-worker",
            "hostname" : "worker",
            "essential": false
        },
        {
            "name" : "nginx",
            "image": "ganeshprabh07/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort" : 80
                }
            ],
            "links": [ "client", "server" ]
        }

    ]
}